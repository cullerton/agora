<div metal:use-macro="layout">

    <div metal:fill-slot="above-content">
        <div id='add-idea'>
            <div><a tal:attributes="href add_idea_url"><span>Add Idea</span></a></div>
        </div>
    </div>

    <div metal:fill-slot="content">
        <div id='ideas'>
            <tal:block tal:repeat="idea ideas">
                <div>
                    <a tal:attributes="href string:ideas/${idea.id}">
                        <span tal:content="idea.title">Title</span>
                    </a>
                </div>
                <div>
                    <span tal:content="idea.intro">Intro</span>
                </div>
                <div>
                    <span tal:content="idea.body">Body</span>
                </div>
            </tal:block>
        </div>
    </div>

</div>

