<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
    <title tal:content="project">Project</title>
    
    <!-- this is boilerplate from pyramid? -->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <meta name="keywords" content="python web application" />
    <meta name="description" content="YA simple application to manage simple site deployment" />
    <meta name="viewport" content="initial-scale=1.0">

    <!-- this is my stuff -->
    <link rel="stylesheet" href="${request.static_url('agora:static/agora.css')}" type="text/css" media="screen" charset="utf-8" />
    <script src="${request.static_url('agora:static/agora.js')}"></script>
    <script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
</head>

<body>

    <div id="wrap">
    
        <div id='header'>
            <h1><a tal:attributes="href home_url"><span tal:content="project">Project</span></a></h1>
        </div>
        
        <div id='add-idea'>
            <div><a tal:attributes="href add_idea_url"><span>Add Idea</span></a></div>
        </div>
        
        <div id='main'>

            <div>
                <tal:block tal:repeat="idea ideas">
                    <div>
                        <a tal:attributes="href string:ideas/${idea.id}">
                            <span tal:content="idea.title">Title</span>
                        </a>
                    </div>
                    <div>
                        <span tal:content="idea.intro">Intro</span>
                    </div>
                    <div>
                        <span tal:content="idea.body">Body</span>
                    </div>
                </tal:block>
            </div>

        </div>
        
        <div id='footer'>
        </div>

    </div>
</body>
</html>
