<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
    <title tal:content="site_name">Site Name</title>

    <!-- this is boilerplate from pyramid? -->
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <meta name="keywords" content="python web application" />
    <meta name="description" content="agora idea view" />
    <meta name="viewport" content="initial-scale=1.0">

    <!-- this is my stuff -->
    <link rel="stylesheet" href="${request.static_url('agora:static/agora.css')}" type="text/css" media="screen" charset="utf-8" />
    <script src="${request.static_url('agora:static/agora.js')}"></script>
    <script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
</head>

<body>

    <div id="wrap">

        <div id='header'>
            <h1>
                <a tal:attributes="href home_url">
                    <span tal:content="site_name">Site Name</span>
                </a>
            </h1>
            <div id='page-title'>
                <h2>View Idea</h2>
            </div>

        </div>

        <div id='main'>

            <div id="view-idea">
                <div id='idea-title'><span tal:content="idea.title">Title</span></div>
                <div id='idea-intro'><span tal:content="idea.intro">Intro</span></div>
                <div id='ideaody-title'><span tal:content="idea.body">Body</span></div>
            </div>

        </div>

        <br />
        <div id="footer">
            <div class="footer">&copy; Copyright 2013, Cullerton Consulting.</div>
        </div>

    </div>

</body>
</html>
